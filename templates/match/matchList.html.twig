{% extends 'base.html.twig' %}

{% block title %}Match list{% endblock %}

{% block body %}
    <table>
        <th>
        <td>Home</td>
        <td>Away</td>
        <td>Result</td>
        <td>Competition</td>
        <td>Date</td>
        <td></td>
        <td></td>
        </th>
        {% for match in matches %}
            <tr>
                <td>{{ match.getHome.getName() }}</td>
                <td>{{ match.getAway.getName() }}</td>
                <td>{{ match.getResult() }}</td>
                <td>{{ match.getCompetition.getCompetitionName() }}</td>
                <td>{{ match.getMatchDate() | date('d/m/Y') }}</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
