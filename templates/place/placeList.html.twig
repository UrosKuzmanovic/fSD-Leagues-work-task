{% extends 'base.html.twig' %}

{% block title %}Place list{% endblock %}

{% block body %}
    <p><a href="{{ path('home') }}">BACK TO HOME PAGE</a></p>
    <p><a href="{{ path('add_place') }}">ADD NEW PLACE</a></p>
    <table>
        <th>
            <td>PTT</td>
            <td>Name</td>
            <td></td>
            <td></td>
        </th>
        {% for place in places %}
            <tr>
                <td>{{ place.getPtt() }}</td>
                <td>{{ place.getName() }}</td>
                <td><a href="{{ path('get_edit_place', {'id': place.getID()}) }}">Edit</a></td>
                <td>Delete</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
