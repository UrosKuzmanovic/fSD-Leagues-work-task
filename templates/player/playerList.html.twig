{% extends 'base.html.twig' %}

{% block title %}Player list{% endblock %}

{% block body %}
    <p><a href="{{ path('home') }}">BACK TO HOME PAGE</a></p>
    <p><a href="{{ path('add_player') }}">ADD NEW PLAYER</a></p>
    <table>
        <th>
        <td>First name</td>
        <td>Last name</td>
        <td>JMBG</td>
        <td>Date of birth</td>
        <td>Position</td>
        <td>Place</td>
        <td>Club</td>
        <td></td>
        <td></td>
        </th>
        {% for player in players %}
            <tr id="row-{{ player.getId() }}">
                <td>{{ player.getFirstName() }}</td>
                <td>{{ player.getLastName() }}</td>
                <td>{{ player.getJmbg() }}</td>
                <td>{{ player.getDateOfBirth() | date('d/m/Y') }}</td>
                <td>{{ player.getPositions() }}</td>
                <td>{{ player.getPlace.getName() }}</td>
                <td>{{ player.getClub.getName() }}</td>
                <td><a href="{{ path("get_edit_player", {'id':player.getId()}) }}">Edit</a></td>
                <td onclick="deletePlayer({{ player.getId() }}, 'row-{{ player.getId() }}');">Delete</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block myJavascripts %}
    <script>
        function deletePlayer(id, row) {
            if (confirm("You are about to delete this player.")) {
                $.ajax({
                    url: "{{ path('delete_player') }}",
                    type: 'POST',
                    dataType: 'json',
                    data: {
                        'id': id
                    },
                    success: function () {
                        $('#' + row).remove();
                        alert("Player was successfully deleted!");
                    }
                })
            }
        }
    </script>
{% endblock %}