{% extends 'base.html.twig' %}

{% block title %}Game list{% endblock %}

{% block body %}
    <p><a href="{{ path('home') }}">BACK TO HOME PAGE</a></p>
    <p><a href="{{ path('add_game') }}">ADD NEW GAME</a></p>
    <table>
        <th>
        <td>Home</td>
        <td>Away</td>
        <td>Result</td>
        <td>Competition</td>
        <td>Date</td>
        <td></td>
        <td></td>
        </th>
        {% for game in games %}
            <tr>
                <td>{{ game.getHome.getName() }}</td>
                <td>{{ game.getAway.getName() }}</td>
                <td>{{ game.getResult() }}</td>
                <td>{{ game.getCompetition.getCompetitionName() }}</td>
                <td>{{ game.getGameDate() | date('d/m/Y') }}</td>
                <td><a href="{{ path("get_edit_game", {'id': game.getGameID()}) }}">Edit</a></td>
                <td>Delete</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
